---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import BasebLayout from './BaseLayout.astro';

export interface Props {
  title: string;
  description: string;
  image?: string;
}

const { title, description, image } = Astro.props;
---

<BasebLayout title={title} description={description} image={image}>
  <Header />
  <slot />
  <Footer />
</BasebLayout>
